/* index/wave.wxss */

.wrapper {
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.wrapper .content {
  width: 70%;
  height: 20%;
  border: 1px solid #F9E49C;
  background-color: black;
  opacity: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  border-radius: 5px;
}

.wrapper .wrapper-title {
  flex: 1;
  background-color: #F9E49C;
  color: black;
  height: 2rem;
  line-height: 2rem;
}

.wrapper .wrapper-content {
  padding: 1rem;
  color: blanchedalmond;
  display: flex;
  justify-content: center;
  height: var(--loading-spinner-size, 30px);
  line-height: var(--loading-spinner-size, 30px);
}

.wrapper .wrapper-footer {
  flex: 1;
  color: white;
  font-size: 0.8rem;
}

.wx-slider-z {
  background: linear-gradient(to right, #fcfcfc 0%, #3a6bf0 65%, #ff0000 100%);
}

.btn-play {
  margin-right: 5px;
}

.play-group {
  display: table;
  margin: 10px auto;
}

.wave-song {
  width: 100%;
  height: 10rem;
  border-radius: 6px;
  border: 1px #e5ff00 solid;
  padding: 5px;
}

.flex-slider {
  width: 20%;
}

.flex-item {
  display: inline-block;
}